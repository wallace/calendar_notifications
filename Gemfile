  gem 'bundler', '~> 2.4'
  gem 'rake', '~> 13.0'
  gem 'rspec', '~> 3.12'
  gem 'webmock', '~> 3.18'  # For mocking HTTP requests
  gem 'timecop', '~> 0.9'   # For time-related tests
end